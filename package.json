{
  "name": "primodium",
  "private": true,
  "scripts": {
    "build": "pnpm recursive run build",
    "clean": "bash clean.sh",
    "deploy:caldera": "pnpm --filter 'contracts' deploy:caldera",
    "dev": "concurrently -n node,contracts,client -c yellow,cyan,magenta \"cd packages/contracts && pnpm run devnode\" \"cd packages/contracts && pnpm run deploy:local\" \"cd packages/client && pnpm run dev\"",
    "dev:client": "pnpm --filter 'client' run dev",
    "dev:contracts": "pnpm --filter 'contracts' deploy:local",
    "dev:node": "pnpm --filter 'contracts' devnode",
    "dev:pty": "run-pty % pnpm dev:node % pnpm dev:client % pnpm dev:contracts",
    "foundry:up": "curl -L https://foundry.paradigm.xyz | bash && ls -la $HOME/.foundry/ && ls -la $HOME/.foundry/bin/ && bash $HOME/.foundry/bin/foundryup",
    "mud:up": "pnpm mud set-version --tag main && pnpm install",
    "prepare": "husky install && (forge --version || pnpm foundry:up)",
    "sort-package-json": "npx sort-package-json package.json 'packages/*/package.json'",
    "sprites:export": "pnpm --filter 'sprites' export",
    "test": "pnpm recursive run test",
    "upgrade:mud": "pnpm mud set-version --tag=next"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix",
    "*.{ts,tsx,css,md,mdx,sol}": "prettier --write",
    "package.json": "pnpm sort-package-json"
  },
  "devDependencies": {
    "@latticexyz/cli": "2.0.0-next.13",
    "@typescript-eslint/eslint-plugin": "5.46.1",
    "@typescript-eslint/parser": "5.46.1",
    "concurrently": "^8.0.1",
    "eslint": "8.29.0",
    "husky": ">=6",
    "lint-staged": ">=10",
    "rimraf": "^3.0.2",
    "run-pty": "4.0.4",
    "typescript": "5.1.6"
  },
  "engines": {
    "node": "18.x",
    "pnpm": "8.x"
  }
}
