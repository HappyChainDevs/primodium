{
  "name": "contracts",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "pnpm run build:lib && pnpm run build:mud && pnpm run build:abi && pnpm run build:typechain",
    "build:abi": "forge clean && forge build",
    "build:lib": "rm -rf src/codegen && tsx ./ts/terrain/commands/terraingen.ts && tsx ./ts/libraries/commands/libgen.ts ",
    "build:mud": "mud tablegen && mud worldgen && pnpm run prototypegen",
    "build:typechain": "rimraf types && typechain --target=ethers-v5 out/IWorld.sol/IWorld.json",
    "deploy:caldera": "pnpm run build && pnpm mud deploy --profile=caldera",
    "deploy:local": "pnpm mud deploy",
    "deploy:testnet": "pnpm run build && pnpm mud deploy --profile=lattice-testnet",
    "dev": "pnpm mud dev-contracts",
    "devnode": "mud devnode",
    "lint": "pnpm run prettier && pnpm run solhint",
    "prettier": "prettier --write './**/*.sol'",
    "prototypegen": "tsx ./ts/prototypes/commands/prototypegen.ts",
    "solhint": "solhint --config ./.solhint.json 'src/**/*.sol' --fix",
    "test": "mud test"
  },
  "dependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/bytes": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@latticexyz/cli": "2.0.0-next.13",
    "@latticexyz/common": "2.0.0-next.13",
    "@latticexyz/config": "2.0.0-next.13",
    "@latticexyz/protocol-parser": "2.0.0-next.13",
    "@latticexyz/schema-type": "2.0.0-next.13",
    "@latticexyz/store": "2.0.0-next.13",
    "@latticexyz/world": "2.0.0-next.13",
    "@latticexyz/world-modules": "2.0.0-next.13",
    "dotenv": "^16.3.1",
    "ethers": "^5.7.2",
    "tsx": "^3.12.8",
    "viem": "1.14.0"
  },
  "devDependencies": {
    "@typechain/ethers-v5": "^10.2.0",
    "@types/node": "^18.15.11",
    "abdk-libraries-solidity": "^3.2.0",
    "ds-test": "https://github.com/dapphub/ds-test.git#e282159d5170298eb2455a6c05280ab5a73a4ef0",
    "forge-std": "https://github.com/foundry-rs/forge-std.git#74cfb77e308dd188d2f58864aaf44963ae6b88b1",
    "prettier": "^2.6.2",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solhint": "^3.3.7",
    "solhint-config-mud": "2.0.0-next.13",
    "solhint-plugin-mud": "2.0.0-next.13",
    "solidity-trigonometry": "https://github.com/mds1/solidity-trigonometry.git",
    "typechain": "^8.1.1"
  }
}
