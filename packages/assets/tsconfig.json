{
  "compilerOptions": {
    "types": ["vite/client"],
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "skipLibCheck": true,
    "baseUrl": ".",
  },
  "include": ["**/*.tsx", "**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
