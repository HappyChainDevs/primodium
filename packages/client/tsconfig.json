{
  "compilerOptions": {
    "types": ["vite/client"],
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Bundler",
    "strict": true,
    "composite": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@game/*": ["./src/game/*"]
    }
  },
  "include": ["**/*.tsx", "**/*.ts", "../game-tools/src/CheatcodesList.tsx"],
  "exclude": ["node_modules", "dist"],
  "references": [{"path": "../game"}, {"path": "../core"}, {"path": "../assets"}]
}
